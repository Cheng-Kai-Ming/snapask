<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label "信箱" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>使用者確認信箱: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label "密碼" %> <i>(若不更動，請留白)</i><br />
    <%= f.password_field :password, autocomplete: "新密碼" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label "密碼確認" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "新密碼" %>
  </div>

  <div class="field">
    <%= f.label "目前密碼" %> <i>(輸入密碼，以確認更動)</i><br />
    <%= f.password_field :current_password, autocomplete: "目前密碼" %>
  </div>

  <div class="actions">
    <%= f.submit "更新" %>
  </div>
<% end %>

<h3>刪除帳號</h3>

<p>你是不是不開心？ <%= button_to "刪除我的帳號", registration_path(resource_name), data: { confirm: "要不要三思而後行？" }, method: :delete %></p>

<%= link_to "回上一頁", :back %>
