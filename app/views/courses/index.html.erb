<h1>課程列表</h1>

<%= link_to "新增課程", new_course_path %>

<section class="course">
<% @courses.each do |course| %>
  <div class="card">
    <article>
      <p>類別：<%= course.category %></p>
      <p>名稱：<%= course.name %></p>
      <p>價格：<%= course.price %></p>
      <p>幣別：<%= course.currency %></p>
      <p>狀態：<%= course.state %></p>

    </article>
    <%= link_to "詳細內容", course_path(course) %>
    <%= link_to "編輯", edit_course_path(course) %>
    <%= link_to "刪除", course_path(course), method: 'delete', data: { confirm: '確認刪除？' } %>
  </div>
<% end %>
</section>